<% assign_meta_tags title: @createdicon.title, image: @createdicon.icon.url %>

<div class="m-5">
  <div class ="w-full p-6 m-auto bg-slate-50 rounded-md shadow-md lg:max-w-lg">
    <div class ="items-center text-center m-2">
      <div  class="flex justify-center">
        <% if @createdicon.user.current_icon.attached?%>
          <div class="avatar p-2">
            <div class="w-8 rounded-full ring ring-success ring-offset-base-100 ring-offset-2">
                <%= image_tag @createdicon.user.current_icon %>
            </div>
          </div>
        <% else %>  
          <div class="avatar placeholder p-2">
            <div class="bg-neutral text-neutral-content rounded-full w-8">
              <span class="text-[0.5rem]"><%=@createdicon.user.name%></span>
            </div>
          </div>
        <% end %> 
        <div class="p-2 text-lg font-bold">
          <p><%= @createdicon.user.name %> のアイコン</p>
        </div>
      </div>
      <p class="p-1 text-lg font-bold">タイトル: <%=@createdicon.title%></p>
      <p class="p-1 text-lg font-bold">テイスト: <%=@createdicon.taste%></p>
      <figure>
        <div class="avatar">
          <div class="w-40 rounded-full ring ring-accent ring-offset-base-100 ring-offset-2 m-3">
              <%= image_tag @createdicon.icon %>
          </div>
        </div>
      </figure>

    <div class ="text-center m-2">
      <% if current_user == @createdicon.user %>
        <%= link_to "https://twitter.com/share?url=#{created_icon_url(@createdicon)}&text=アイコンを生成したよ！
        %0a【キーワード: #{@createdicon.title}】
        %0a%20%23AIcon
        %0a@takuywater%0a",
        title: 'Twitter',class:'btn rounded-md shadow-md m-3', target: '_blank' do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitter-x" viewBox="0 0 16 16">
            <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865z"/>
          </svg>
        <% end %>
        <!-- Lineシェア機能 -->
          <% line_url = "http://line.me/R/msg/text/?アイコンを生成したよ！%0a#{created_icon_url(@createdicon)}" %>
          <%= link_to line_url, title: 'LINE', class: 'btn rounded-md shadow-md m-3', target: '_blank', rel: 'noopener noreferrer' do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-line" viewBox="0 0 16 16">
              <path d="M8 0c4.411 0 8 2.912 8 6.492 0 1.433-.555 2.723-1.715 3.994-1.678 1.932-5.431 4.285-6.285 4.645-.83.35-.734-.197-.696-.413l.003-.018.114-.685c.027-.204.055-.521-.026-.723-.09-.223-.444-.339-.704-.395C2.846 12.39 0 9.701 0 6.492 0 2.912 3.59 0 8 0M5.022 7.686H3.497V4.918a.156.156 0 0 0-.155-.156H2.78a.156.156 0 0 0-.156.156v3.486c0 .041.017.08.044.107v.001l.002.002.002.002a.15.15 0 0 0 .108.043h2.242c.086 0 .155-.07.155-.156v-.56a.156.156 0 0 0-.155-.157m.791-2.924a.156.156 0 0 0-.156.156v3.486c0 .086.07.155.156.155h.562c.086 0 .155-.07.155-.155V4.918a.156.156 0 0 0-.155-.156zm3.863 0a.156.156 0 0 0-.156.156v2.07L7.923 4.832l-.013-.015v-.001l-.01-.01-.003-.003-.011-.009h-.001L7.88 4.79l-.003-.002-.005-.003-.008-.005h-.002l-.003-.002-.01-.004-.004-.002-.01-.003h-.002l-.003-.001-.009-.002h-.006l-.003-.001h-.004l-.002-.001h-.574a.156.156 0 0 0-.156.155v3.486c0 .086.07.155.156.155h.56c.087 0 .157-.07.157-.155v-2.07l1.6 2.16a.2.2 0 0 0 .039.038l.001.001.01.006.004.002.008.004.007.003.005.002.01.003h.003a.2.2 0 0 0 .04.006h.56c.087 0 .157-.07.157-.155V4.918a.156.156 0 0 0-.156-.156zm3.815.717v-.56a.156.156 0 0 0-.155-.157h-2.242a.16.16 0 0 0-.108.044h-.001l-.001.002-.002.003a.16.16 0 0 0-.044.107v3.486c0 .041.017.08.044.107l.002.003.002.002a.16.16 0 0 0 .108.043h2.242c.086 0 .155-.07.155-.156v-.56a.156.156 0 0 0-.155-.157H11.81v-.589h1.525c.086 0 .155-.07.155-.156v-.56a.156.156 0 0 0-.155-.157H11.81v-.589h1.525c.086 0 .155-.07.155-.156Z"/>
            </svg>
          <% end %>

          <%= link_to rails_blob_path(@createdicon.icon, disposition: "attachment"), download: "" do%>
          <div class="btn rounded-md shadow-md m-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download" viewBox="0 0 16 16">
              <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
              <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708l3 3z"/>
            </svg>
          </div>
        <% end %>

      <% end %>
      </div>

      <div class="m-5 flex justify-center">
       <% if current_user == @createdicon.user %>
          <%= link_to edit_created_icon_path(@createdicon) do %>
            <div class="text-xl px-5 link flex items-center justify-center">
              <div class="px-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                </svg>
              </div>
              編集
            </div>
            <% end %>
          <%= link_to created_icon_path(@createdicon), data: { turbo_method: :delete } do %>
            <div class="text-xl link link-error px-5 flex items-center justify-center">
              <div class="px-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                  <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
                </svg>
              </div>
              削除
            </div>
          <% end %>
        <% end %>
      </div>
      <%= link_to "アイコン一覧へ", icons_path , class:"link link-neutral text-xl" %>
    </div>
  </div>
</div>
