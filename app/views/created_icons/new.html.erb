<div class="">
  <div class="w-full p-6 m-auto bg-white rounded-md shadow-md lg:max-w-lg">
     <h1 class="text-3xl font-semibold text-center text-purple-700">アイコンの生成</h1>
    <div class= "space-y-4">
      <%= form_with model: @createdicon, url: created_icons_path, local: true do |f| %>
        <%= f.text_field :title, class: "w-full input input-bordered input-primary space-y-4", placeholder: 'キーワード' %>
        <div class='text-center'>
          <%= f.radio_button :taste, 'cute', id: 'taste_cute', class: 'form-check-input', checked: true %>
          <%= f.label :taste_cute, 'cute', class: 'form-check-label' %>  
          <%= f.radio_button :taste, 'cool', id: 'taste_cool', class: 'form-check-input' %>
          <%= f.label :taste_cool, 'cool', class: 'form-check-label' %>
        </div>
        <div class='text-center'>
          <%= f.submit "生成", class: "text-center btn" %>
        </div>
      <% end %>
    <div>
    <div class='text-center link link-neutral'>
      <%= link_to '投稿一覧へ', icons_path %>
    </div>
  </div>
</div>