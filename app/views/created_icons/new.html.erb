<div class= "mx-5">
<div class="p-6 m-auto bg-slate-50 rounded-md shadow-md sm:max-w-sm mt-5 sm:mt-20">
  <h1 class="text-3xl font-semibold text-center mb-5">アイコンAI生成</h1>
  <div class= "space-y-4">
    <%= form_with model: @createdicon, local: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_field :title, id: "keyword", class: "w-full input input-bordered input-accent space-y-4", placeholder: 'キーワード 例：おどる黒柴犬', required: true %>
      <div class='m-7'>
      <h1 class="text-l font-semibold text-center m-1">テイスト選択</h1>
        <div class='m-1 flex items-center justify-between'>
          <%= f.radio_button :taste, 'simple', id: 'taste_simple', class: 'radio', checked: true %>
          <%= f.label :taste_simple, 'simple', class: 'form-check-label mx-10' %>
          <label for="my_modal_3" class="btn btn-ghost "><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg></label>
          <input type="checkbox" id="my_modal_3" class="modal-toggle" />
          <div class="modal" role="dialog">
            <div class="modal-box">
              <h3 class="font-bold text-lg text-center m-2">simple</h3>
              <div class="avatar flex justify-center">
                <div class="w-60 rounded-full  ring-offset-2">
                    <%= image_tag asset_path("simple.png") %>
                </div>
              </div>
              <p class="py-2 text-center m-3">白黒でのシンプルなアイコンのテイスト</p>
              <div class="modal-action">
                <label for="my_modal_3" class="btn bg-slate-50 rounded-md shadow-md">Close</label>
              </div>
            </div>
          </div>
        </div>
        <div class='m-1 flex items-center justify-between'>
          <%= f.radio_button :taste, 'cool', id: 'taste_cool', class: 'radio' %>
          <%= f.label :taste_cool, 'cool', class: 'form-check-label mx-10' %>
          <label for="my_modal_2" class="btn btn-ghost "><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg></label>
          <input type="checkbox" id="my_modal_2" class="modal-toggle" />
          <div class="modal" role="dialog">
            <div class="modal-box">
              <h3 class="font-bold text-lg text-center m-2">cool</h3>
              <div class="avatar flex justify-center">
                <div class="w-60 rounded-full  ring-offset-2">
                    <%= image_tag asset_path("cool.png") %>
                </div>
              </div>
              <p class="py-2 text-center m-3">リアリティがあるクールなアイコンのテイスト</p>
              <div class="modal-action">
                <label for="my_modal_2" class="btn bg-slate-50 rounded-md shadow-md">Close</label>
              </div>
            </div>
          </div>
        </div>
        <div class='m-1 flex items-center justify-between'>
          <%= f.radio_button :taste, 'cute', id: 'taste_cute', class: 'radio' %>
          <%= f.label :taste_cute, 'cute', class: 'form-check-label mx-10' %> 
          <div class='inset-y-0 right-0"'>
            <label for="my_modal_1" class="btn btn-ghost"><svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg></label>
            <input type="checkbox" id="my_modal_1" class="modal-toggle" />
            <div class="modal" role="dialog">
              <div class="modal-box">
                <h3 class="font-bold text-lg text-center m-2">cute</h3>
                <div class="avatar flex justify-center">
                  <div class="w-60 rounded-full  ring-offset-2">
                      <%= image_tag asset_path("cute2.png") %>
                  </div>
                </div>
                <p class="py-2 text-center m-3">可愛らしいアイコンのテイスト</p>
                <div class="modal-action">
                  <label for="my_modal_1" class="btn bg-slate-50 rounded-md shadow-md">Close</label>
                </div>
              </div>
            </div>
          </div>
        </div> 
      </div>
      <div class='text-center m-5'>
        <%= f.button "生成", type:'submit', id: "openModal", class: "text-center btn rounded-md shadow-md" %>
      </div>
    <% end %>
  </div>
  <div class='text-center link link-neutral m-2'>
    <%= link_to 'アイコン一覧へ', icons_path %>
  </div>
  </div>
</div>

<!-- モーダルウィンドウのマークアップ例 -->
<section id="modalArea" class="modalArea hidden fixed inset-0 z-10 opacity-0 transition-opacity duration-400 ease-in-out justify-center items-center">
  <div id="modalBg" class="w-full h-full flex justify-center items-center"></div>
    <div class="modalWrapper absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-11/12 max-w-md">
      <div class="container mx-auto px-5 py-10 bg-base-content border border-point rounded-md items-center text-center">
        <div class="bg-slate-50 rounded-md shadow-md">
          <p class="text-center text-xl flex items-center justify-center pt-2">
            <span class="loading loading-ring loading-md mx-2"></span>
            アイコンを生成中
            <span class="loading loading-ring loading-md mx-2"></span>
          </p>
          <div class="avatar mt-5 mx-5 justify-content">
            <div class="w-40 rounded-full ring ring-secondary justify-center">
              <%= image_tag 'loading.png' %>
            </div>
          </div>
          <p class="text-center text-md flex items-center justify-center py-2">
            どんなアイコンができるかな〜
          </p>
        </div>
      </div>
    </div>
  </div>
</section>