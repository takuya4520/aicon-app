<div class="flex flex-wrap">
  <aside class="w-full md:w-1/4">
    <section class="p-4">
      <h1 class="flex items-center text-lg font-bold">
        <!-- gravatar_forの代わりにTailwind CSSを使って画像をスタイル -->
        <h2 class="justify-center text-center text-xl"><%= @user.name %>のマイページ</h2>
      </h1>
    </section>
    <section class="p-4">
      <!-- 'shared/stats'の内容をここに配置、Tailwind CSSでスタイル -->
    </section>
  </aside>
  <div class="w-full md:w-3/4 p-4">
    <!-- ログイン状態に応じた表示、Tailwind CSSでスタイル -->
    <section>
      <h3 class="text-lg font-semibold">投稿数: <%= @icons.count %></h3>
    </section>
    <div class="flex flex-wrap justify-center">
	    <% if @icons.present? %>
		    <% @icons.each do |icon| %>
			    <% if icon.is_a?(PostIcon) %>
				    <%= render 'icons/post_icon', icon: icon %>
			    <% elsif icon.is_a?(CreatedIcon) %>
				    <%= render 'icons/created_icon', icon: icon %>
		    	<% end %>
		    <% end %>
	    <% else %>
		    <p>投稿がありません。</p>
	    <% end %>
    </div>
  </div>
</div>